@model MyBlog.DTOS.BlogDto

<dl class="row">
    <dt class="col-sm-2">
        Name:
    </dt>
    <dd class="col-sm-10">
        @Model.Url
    </dd>
    
    @foreach (var item in @Model.Categories)
    {
        <dt class="col-sm-2">
            Category:
        </dt>
        <dd class="col-sm-10">
            @item.CategoryName
        </dd>
        
        <dt class="col-sm-2">
            Description:
        </dt>
        <dd class="col-sm-10">
            @item.Description
        </dd>
    }
       
</dl>


<button style="background-color:darkblue;"><a asp-action="Index">Back to List</a></button>