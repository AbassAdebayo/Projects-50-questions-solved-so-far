@model MyBlog.DTOS.CreatePostRequestModel

<div class="container" xmlns="http://www.w3.org/1999/html">
    <div class="row justify-content-center">
        <div class=" card col-md-6">
            <div class="card-body ">
                <div class="bg-light">
                    <h1 class="tagcolor" style="color:mediumblue">Create</h1>
                    <p class="tagcolor" style="color:mediumblue">Please use this box to create a post.</p>
                    <hr class="tagcolor" style="color:mediumblue">

                </div>
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row">
                        <div class="form-group col-sm-6">
                            <label asp-for="Title" class="control-label"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="tweet-body">
                            <label asp-for="Content" class="control-label"></label>
                            <span asp-validation-for="Content" class="text-danger"></span>
                            <textarea class="status" name="Content" placeholder="Write your post here!" rows="4" cols="50"> 
                            </textarea>
                        </div>
                         <div class="col-md-6" style="margin-top: 20px; font-size: larger; font-weight: bold; color: darkcyan">
                             <label class="control-label">Select Image</label>
                             <input name="PostPhoto" type="file" class="form-control" required/>
                             </div>
                         
                    </div>
                   
                    <div class="form-row">
                        <div class="col-md-6" style="margin-top: 20px; font-size: larger; font-weight: bold; color: darkcyan">
                            <label  class="control-label">Blog</label>
                            <select asp-for="BlogId" class="form-control" asp-items="ViewBag.Blogs" required>
                                <option value="">--Select Blog--</option>
                            </select>
                        </div>
                        
                        
                       
                    </div>
                    <div class="form-group ">
                        <input href="#myModal" type="submit" value="Submit" class="btn btn-success trigger-btn col-sm-12" data-toggle="modal" />
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
