@model IEnumerable<MyBlog.DTOS.PostDto>


<div class="card-header" style="background-color:midnightblue;">
    <div class="card-title">
        <h1 class="text-center">Posts</h1>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>


            <th>
                Update
            </th>
            <th>
                Details
            </th>
            <th>
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => post.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => post.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => post.Title)
            </td>
            
            <td>
                <a asp-action="Update" asp-route-id="@post.Id">Update</a>
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@post.Id">Details</a>
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@post.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<button style="background-color: midnightblue"><a asp-controller="Post"  asp-action="Create">Create Post</a> </button>
